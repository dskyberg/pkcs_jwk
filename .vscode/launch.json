                "args": [
                    "build",
                    "--bin=pem_jwk",
                    "--package=pem_jwk"
                ],
                "filter": {
                    "name": "pem_jwk",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
