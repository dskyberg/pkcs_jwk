            "request": "launch",
            "name": "Run",
            "cargo": {
                "args": [
                    "run",
                    "--",
                    "-i",
                    "tests/key.pem"
                ],
                "filter": {
                    "name": "pem_jwk",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'pem_jwk'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=pem_jwk"
                ],
                "filter": {
                    "name": "pem_jwk",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
